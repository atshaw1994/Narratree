<%= render partial: "shared/section_container", locals: {
  width: "100%",
  header: content_tag(:h2, "Create Account"),
  body: content_tag(:div, style: "display: flex; flex-direction: column; align-items: center; width: 100%;") do
    content_tag(:div, class: "form-body", style: "max-width: 700px; width: 100%; text-align: left;") do
      form_with(model: @user, local: true) do |form|
        safe_join([
          content_tag(:div, class: "signup-form-name-group") do
            content_tag(:div, style: "display: flex; flex-direction: column; margin-right: 10px;") do
              form.label(:first_name, class: "form-input-field-label") +
              form.text_field(:first_name, class: "form-input-field", required: true)
            end +
            content_tag(:div, style: "display: flex; flex-direction: column;") do
              form.label(:last_name, class: "form-input-field-label") +
              form.text_field(:last_name, class: "form-input-field", required: true)
            end
          end,
          content_tag(:div, class: "signup-form-username-group") do
            form.label(:username, class: "form-input-field-label") +
            form.text_field(:username, class: "form-input-field", required: true)
          end,
          content_tag(:div, class: "signup-form-email-group") do
            form.label(:email, class: "form-input-field-label") +
            form.email_field(:email, class: "form-input-field", required: true)
          end,
          content_tag(:div, class: "signup-form-password-group") do
            content_tag(:div, style: "display: flex; flex-direction: column; margin-right: 10px;") do
              form.label(:password, class: "form-input-field-label") +
              form.password_field(:password, class: "form-input-field", required: true)
            end +
            content_tag(:div, style: "display: flex; flex-direction: column;") do
              form.label(:password_confirmation, "Confirm Password", class: "form-input-field-label") +
              form.password_field(:password_confirmation, class: "form-input-field", required: true)
            end
          end,
          content_tag(:div, class: "signup-form-submit-group") do
            form.submit("Sign Up", class: "signup-form-submit-button")
          end
        ])
      end
    end
  end
} %>