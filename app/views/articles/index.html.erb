
<div class="header">
    <h1 class="page-title">atshaw1994's BlogSite</h1>
    <p class="page-subtitle">A place to share knowledge and ideas</p>
    <div class="header-links">
      <%= link_to "Home", root_path %>
      <%= link_to "New Article", new_article_path %>
    </div>
</div>

<div class="article-list">
    <h2>Articles</h2>
    <ul class="articles">
    <% @articles.each do |article| %>
        <div class="card">
            <li>
                <%= link_to article.title, article %>
            </li>
            <%= link_to article_path(article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
                <span class="material-symbols-outlined delete-btn">delete</span>
            <% end %>
        </div>
    <% end %>
    </ul>
</div>