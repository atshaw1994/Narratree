<div class="comment-form" data-controller="comment-counter">
  <%= form_with model: [ article, comment ] do |form| %>
    <div class="comment-body-section">
      <%= form.text_area :body, maxlength:"250", id: "comment-body-field", data: { comment_counter_target: "textarea", action: "input->comment-counter#update" } %>
    </div>
    <div class="comment-submit-section">
      <p style="justify-self: flex-start; margin: -8px 0 -16px 32px;">
        <span data-comment-counter-target="count">250 / 250</span>
      </p>
      <%= form.submit "Post", class: "form-submit-button" %>
    </div>
  <% end %>
</div>