<div class="comment-form">
  <%= form_with model: [ article, article.comments.build ] do |form| %>
    <div class="form-title-section">
      <%= form.label :commenter, class: "comment-title-label" %><br>
      <%= form.text_field :commenter, class: "form-title-textfield" %>
    </div>
    <div class="comment-body-section">
      <%= form.label :comment, class: "comment-body-label" %><br>
      <%= form.text_area :comment, class: "comment-body-textarea" %>
    </div>
    <div class="form-submit-section">
      <%= form.submit "Post", class: "form-submit-button" %>
    </div>
  <% end %>
</div>
