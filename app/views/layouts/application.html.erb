<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Narratree" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <%= favicon_link_tag 'favicon.png' %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= yield :head %>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <div class="body-content"><%= yield %></div>
    <div id="login-modal" class="modal">
      <div class="modal-content">
          <div class="section-container">
              <div class="section-container-header">
                  <h2>Log In</h2>
                  <span class="close-button" onclick="hideModal()">&times;</span>
              </div>
              <div class="section-container-body">
                  <%= render 'shared/login_form' %>
              </div>
          </div>
      </div>
    </div>
    <script>
      // Function to show the modal (keep this in the global scope)
      function showModal(event) {
        event.preventDefault(); 
        const modal = document.getElementById('login-modal');
        if (modal) {
          modal.style.display = 'block';
        }
      }

      // Function to hide the modal (keep this in the global scope)
      function hideModal() {
        const modal = document.getElementById('login-modal');
        if (modal) {
          modal.style.display = 'none';
        }
      }

      // Attach event listeners when Turbo loads a new page
      document.addEventListener("turbo:load", () => {
        const signupLink = document.querySelector('[data-modal-target="login-modal"]');
        const closeBtn = document.querySelector('.close-button');
        const modal = document.getElementById('login-modal');

        // Listener for the Sign Up link to show the modal
        if (signupLink) {
          signupLink.addEventListener('click', showModal);
        }
        
        // Listener for the close button
        if (closeBtn) {
          closeBtn.addEventListener('click', hideModal);
        }

        // Listener for clicks outside the modal
        if (modal) {
          window.addEventListener('click', function(event) {
            if (event.target == modal) {
                hideModal();
            }
          });
        }
      });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
  </body>
</html>
