<li class="page-item <%= 'disabled' if current_page.last? %>">
  <% if current_page.last? %>
    <span class="page-link" aria-label="Next" aria-disabled="true"><%= raw(t 'views.pagination.next') %></span>
  <% else %>
    <%= link_to raw(t('views.pagination.next')), url, rel: 'next', remote: remote, class: 'page-link', aria: { label: 'Next' } %>
  <% end %>
</li>
