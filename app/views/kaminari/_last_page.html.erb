<li class="page-item <%= 'disabled' if current_page.last? %>">
  <% if current_page.last? %>
    <span class="page-link" aria-label="Last" aria-disabled="true"><%= raw(t 'views.pagination.last') %></span>
  <% else %>
    <%= link_to raw(t('views.pagination.last')), url, remote: remote, class: 'page-link', aria: { label: 'Last' } %>
  <% end %>
</li>
