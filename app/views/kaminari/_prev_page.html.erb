<li class="page-item <%= 'disabled' if current_page.first? %>">
  <% if current_page.first? %>
    <span class="page-link" aria-label="Previous" aria-disabled="true"><%= raw(t 'views.pagination.previous') %></span>
  <% else %>
    <%= link_to raw(t('views.pagination.previous')), url, rel: 'prev', remote: remote, class: 'page-link', aria: { label: 'Previous' } %>
  <% end %>
</li>
