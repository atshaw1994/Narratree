<li class="page-item <%= 'disabled' if current_page.first? %>">
  <% if current_page.first? %>
    <span class="page-link" aria-label="First" aria-disabled="true"><%= raw(t 'views.pagination.first') %></span>
  <% else %>
    <%= link_to raw(t('views.pagination.first')), url, remote: remote, class: 'page-link', aria: { label: 'First' } %>
  <% end %>
</li>
