<div class="form">
    <div id="login-modal-errors" style="color:red;margin-bottom:8px;"></div>
    <%= form_with model: User.new, url: user_session_path, local: false, data: { turbo: false }, novalidate: true do |form| %>
        <div class="form-group">
            <%= form.label :email %>
            <%= form.email_field :email, required: true %>
            <span id="email-error" style="color: red; display: none;"></span>
        </div>
        <div class="form-group">
            <%= form.label :password %>
            <%= form.password_field :password, required: true %>
        </div>
        <div class="form-group">
            <%= form.submit "Log In", class: "btn-login" %>
        </div>
        <div class="form-group">
            <%= link_to "Create Account", new_user_registration_path %>
        </div>
    <% end %>
</div>